    name="Podcasts"
    category="Core"
    description="Subscribe to podcasts and stream or download episodes."
    author="Michael C. Urbanski, Gabriel Burt"
    url="http://banshee.fm/"
    defaultEnabled="true">

  <Dependencies>
    <Addin id="Banshee.Services" version="1.0"/>

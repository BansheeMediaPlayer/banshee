  </Extension>

  <Extension path="/Banshee/ThickClient/GtkBaseClient/PostInitializeGtk">
    <PostInitializeGtk class="Banshee.MeeGo.MeeGoThemeLoader"/>
  </Extension>
   
</Addin>

#!/bin/sh
#export DYLD_LIBRARY_PATH=@expanded_libdir@/@PACKAGE@:$DYLD_LIBRARY_PATH
#export LD_LIBRARY_PATH=@expanded_libdir@/@PACKAGE@:@expanded_libdir@/@PACKAGE@/mediaengines/helix:@expanded_libdir@/@PACKAGE@/mediaengines/gst:@expanded_libdir@/@PACKAGE@/xing-encoder:$LD_LIBRARY_PATH

prefix=@prefix@
libdir=@expanded_libdir@
exec_asm="banshee.exe"

export DYLD_LIBRARY_PATH=@expanded_libdir@:$DYLD_LIBRARY_PATH
export LD_LIBRARY_PATH=@expanded_libdir@:$LD_LIBRARY_PATH

export HELIX_LIBS="@HELIX_LIBRARY_PATH@"

if [ -e ./banshee.exe ] && [ -e ./Makefile ] \
&& [ -e ./ConfigureDefines.cs ]; then
	MONO_EXE="./$exec_asm"
	export MONO_PATH="../entagged-sharp/:../hal-sharp/:../burn-sharp/:../plugincore/:/usr/lib/ipod-sharp/:$MONO_PATH"

	echo "*** Warning - Running UNINSTALLED $exec_asm ***"
else
	MONO_EXE="@expanded_libdir@/@PACKAGE@/$exec_asm"
fi

exec @MONO@ --debug $MONO_EXE "$@"



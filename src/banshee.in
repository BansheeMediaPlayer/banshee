#!/bin/bash

prefix=@prefix@
libdir=@expanded_libdir@
exec_asm="banshee.exe"

export DYLD_LIBRARY_PATH=@expanded_libdir@${DYLD_LIBRARY_PATH+:$DYLD_LIBRARY_PATH}
export LD_LIBRARY_PATH=@expanded_libdir@${LD_LIBRARY_PATH+:$LD_LIBRARY_PATH}

export HELIX_LIBS="@HELIX_LIBRARY_PATH@"

if [ -e ./banshee.exe ] && [ -e ./Makefile ] \
&& [ -e ./Banshee.Base/ConfigureDefines.cs ]; then
	MONO_EXE="./$exec_asm"
	export MONO_PATH="Banshee.Base/:MusicBrainz/:Banshee.Widgets/:GtkSharpBackports:../entagged-sharp/:../hal-sharp/:../burn-sharp/:/usr/lib/ipod-sharp/${MONO_PATH+:$MONO_PATH}"

	echo "*** Warning - Running UNINSTALLED $exec_asm ***"
else
	MONO_EXE="@expanded_libdir@/@PACKAGE@/$exec_asm"
fi

exec @MONO@ --debug $MONO_EXE "$@"



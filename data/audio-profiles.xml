<?xml version="1.0" encoding="utf-8"?>
<!-- DO NOT EDIT -->
<audio-profiles>
	<preset-variables>
		<variable id="channels">
			<name>Channels</name>
			<control-type>combo</control-type>
			<default-value>2</default-value>
			<possible-values>
				<value value="1">1</value>
				<value value="2">2</value>
			</possible-values>
			<advanced />
		</variable>
		<variable id="sample_rate">
			<name>Sample Rate</name>
			<control-type>combo</control-type>
			<default-value>44100</default-value>
			<possible-values>
				<value value="44100">44.1 kHz</value>
				<value value="22050">22.05 kHz</value>
			</possible-values>
			<advanced />
		</variable>
	</preset-variables>
	<profiles>
		<profile id="flac">
			<name>FLAC (Lossless)</name>
			<description>High quality with minimally-compressed file size.</description>
			<output-file-extension>flac</output-file-extension>
			<mimetype>application/x-flac</mimetype>
			<mimetype>audio/flac</mimetype>
			<mimetype>audio/x-flac</mimetype>
			<pipeline>
				<process id="gstreamer">audioconvert ! audio/x-raw-float,rate=$sample_rate,channels=$channels ! audioconvert ! flacenc</process>
				<preset-variable id="channels" />
				<preset-variable id="sample_rate" />
			</pipeline>
		</profile>
		<profile id="wav">
			<name>WAV (Lossless)</name>
			<description>High quality with large file size (no compression).</description>
			<output-file-extension>wav</output-file-extension>
			<mimetype>audio/x-wav</mimetype>
			<mimetype>audio/wav</mimetype>
			<pipeline>
				<process id="gstreamer">audioconvert ! audio/x-raw-float,rate=$sample_rate,channels=$channels ! audioconvert ! wavenc</process>
				<preset-variable id="channels" />
				<preset-variable id="sample_rate" />
			</pipeline>
		</profile>
		<profile id="vorbis">
			<name>Ogg Vorbis (Lossy)</name>
			<description>Good trade-off between quality and file size.</description>
			<output-file-extension>ogg</output-file-extension>
			<mimetype>audio/x-ogg</mimetype>
			<mimetype>audio/ogg</mimetype>
			<mimetype>audio/x-vorbis+ogg</mimetype>
			<mimetype>audio/x-vorbis</mimetype>
			<mimetype>audio/vorbis</mimetype>
			<mimetype>application/x-ogg</mimetype>
			<mimetype>application/ogg</mimetype>
			<pipeline>
				<process id="gstreamer">audioconvert ! audio/x-raw-float,rate=$sample_rate,channels=$channels ! audioconvert ! vorbisenc name=enc quality=$quality ! oggmux</process>
				<variable id="quality">
					<name>Audio Quality</name>
					<control-type>slider</control-type>
					<min-value>-1.0</min-value>
					<max-value>10.0</max-value>
					<step-value>1.0</step-value>
					<default-value>5.0</default-value>
					<transformation id="gstreamer">$_ / 10</transformation>
				</variable>
				<preset-variable id="channels" />
				<preset-variable id="sample_rate" />
			</pipeline>
		</profile>
		<profile id="xing-mp3">
			<name>Xing MP3 (Lossy)</name>
			<description>Good trade-off between quality and file size.</description>
			<output-file-extension>mp3</output-file-extension>
			<mimetype>audio/mp3</mimetype>
			<mimetype>audio/mpeg3</mimetype>
			<mimetype>audio/x-mpeg-3</mimetype>
			<mimetype>audio/x-mpeg</mimetype>
			<mimetype>application/x-id3</mimetype>
			<mimetype>audio/x-mp3</mimetype>
			<pipeline>
				<process id="gstreamer">audioconvert ! audio/x-raw-float,rate=$sample_rate,channels=$channels ! audioconvert ! xingenc bitrate=$bitrate ! id3v2mux</process>
				<variable id="bitrate">
					<name>Bitrate</name>
					<control-type>combo</control-type>
					<default-value>128</default-value>
					<possible-values>
						<value value="96">96 Kbps</value>
						<value value="128">128 Kbps</value>
						<value value="160">160 Kbps</value>
						<value value="192">192 Kbps</value>
					</possible-values>
				</variable>
				<preset-variable id="channels" />
				<preset-variable id="sample_rate" />
			</pipeline>
		</profile>
		<profile id="lame-mp3">
			<name>MP3 (Lossy)</name>
			<description>Good trade-off between quality and file size.</description>
			<output-file-extension>mp3</output-file-extension>
			<mimetype>audio/mp3</mimetype>
			<mimetype>audio/mpeg3</mimetype>
			<mimetype>audio/x-mpeg-3</mimetype>
			<mimetype>audio/x-mpeg</mimetype>
			<mimetype>application/x-id3</mimetype>
			<mimetype>audio/x-mp3</mimetype>
			<pipeline>
				<process id="gstreamer">audioconvert ! audio/x-raw-float,rate=$sample_rate,channels=$channels ! audioconvert ! lame bitrate=$bitrate ! id3v2mux</process>
				<variable id="bitrate">
					<name>Bitrate</name>
					<control-type>combo</control-type>
					<default-value>128</default-value>
					<possible-values>
						<value value="64">64 Kbps</value>
						<value value="96">96 Kbps</value>
						<value value="128">128 Kbps</value>
						<value value="160">160 Kbps</value>
						<value value="192">192 Kbps</value>
						<value value="320">320 Kbps</value>
					</possible-values>
				</variable>
				<preset-variable id="channels" />
				<preset-variable id="sample_rate" />
			</pipeline>
		</profile>
		<profile id="faac-aac">
			<name>MP4/AAC (Lossy)</name>
			<description>Good trade-off between quality and file size.</description>
			<output-file-extension>m4a</output-file-extension>
			<mimetype>audio/x-m4a</mimetype>
			<mimetype>audio/mp4</mimetype>
			<pipeline>
				<process id="gstreamer">audioconvert ! audio/x-raw-int,rate=$sample_rate,channels=$channels ! audioconvert ! faac bitrate=$bitrate outputformat=1 ! ffmux_mp4</process>
				<variable id="bitrate">
					<name>Bitrate</name>
					<control-type>combo</control-type>
					<default-value>128</default-value>
					<possible-values>
						<value value="64">64 Kbps</value>
						<value value="96">96 Kbps</value>
						<value value="128">128 Kbps</value>
						<value value="160">160 Kbps</value>
						<value value="192">192 Kbps</value>
						<value value="320">320 Kbps</value>
					</possible-values>
				</variable>
				<preset-variable id="channels" />
				<preset-variable id="sample_rate" />
			</pipeline>
		</profile>
	</profiles>
</audio-profiles>


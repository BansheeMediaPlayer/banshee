<?xml version="1.0" encoding="utf-8"?>
<audio-profiles>
  <profiles>
    <profile id="wma-asf">
      <name>WMA (Lossy)</name>
      <description>Good trade-off between quality and file size.</description>
      <output-file-extension>wma</output-file-extension>
      <mimetype>audio/x-ms-wma</mimetype>
      <pipeline>
        <process id="gstreamer">
          audioconvert ! 
          audio/x-raw-int,rate=$sample_rate,channels=$channels ! 
          audioconvert ! 
          fluwmaenc bitrate=$bitrate ! 
          fluasfmux
        </process>
        <variable id="bitrate">
          <name>Bitrate</name>
          <control-type>combo</control-type>
          <default-value>64</default-value>
          <possible-values>
            <value value="64">64 Kbps</value>
            <value value="96">96 Kbps</value>
            <value value="128">128 Kbps</value>
          </possible-values>
          <transformation id="gstreamer">$_ * 1000</transformation>
        </variable>
        <!--<variable id="quality">
            <name>Audio Quality</name>
            <control-type>slider</control-type>
            <min-value>0</min-value>
            <max-value>100</max-value>
            <step-value>1</step-value>
            <default-value>75</default-value>
        </variable>-->
        <preset-variable id="channels" />
        <preset-variable id="sample_rate" />
      </pipeline>
    </profile>
  </profiles>
</audio-profiles>

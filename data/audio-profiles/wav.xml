<?xml version="1.0" encoding="utf-8"?>
<audio-profiles>
  <profiles>
    <profile id="wav">
      <name>WAV (Lossless)</name>
      <description>High quality with large file size (no compression).</description>
      <output-file-extension>wav</output-file-extension>
      <mimetype>audio/x-wav</mimetype>
      <mimetype>audio/wav</mimetype>
      <pipeline>
        <process id="gstreamer">
          audioconvert ! 
          audio/x-raw-float,rate=$sample_rate,channels=$channels ! 
          audioconvert ! 
          wavenc
        </process>
        <preset-variable id="channels" />
        <preset-variable id="sample_rate" />
      </pipeline>
    </profile>
  </profiles>
</audio-profiles>
